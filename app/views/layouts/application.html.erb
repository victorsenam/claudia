<!DOCTYPE html>
<html>
  <head>
    <title>Claudia</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    
  </head>

  <%= render 'header' %>
  <body>

    <% if flash[:notice] %>
      <div id="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="content">
      <%= yield %>
    </div>

  </body>

  <%= render 'footer' %>
</html>
