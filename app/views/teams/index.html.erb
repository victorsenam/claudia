<p id="notice"><%= notice %></p>

<div class="title_header">
  <div class="line"> </div>
  <div class="title"><h2>Gerenciar Equipes</h2></div>

</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to image_tag("remove_icon.png", :class => "row_icon"), team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar Equipe', new_team_path, :id => 'add_link' %>
