
<div class="title_header">
  <div class="line"> </div>
  <div class="title"><h2>Gerenciar Eventos</h2></div>

</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Image url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date.to_s %></td>
        <td><%= event.image_url %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Detalhes', event %></td>
        <td><%= link_to 'Editar', edit_event_path(event) %></td>
        <td><%= link_to image_tag("remove_icon.png", :class => "row_icon"), event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar Evento', new_event_path, :id => 'add_link' %>
